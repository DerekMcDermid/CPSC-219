public class Fighters
{
  public String name;
  public String role;
  public int maxHP
  public int maxAttk
  public int minAttk
  public int level
  public int currentHP
  
  public Fighters(String name, String role)
  {
    this.name = name;
    this.role = role;
  }
  
  public int attack(Creature other)
  {
    int attk = (int)(Math.random()*(this.maxAttk - this.minAttk) + this.minAttk);
    currentHP -= attk;
    return attk;
  }
  
  public boolean isAlive()
  {
    if (this.currentHP <=0)
    {
      return false;
    }
    else
    {
      return true;
    }
  }
  
  public int getCurrentHP()
  {
    return currentHP;
  }
  
  public void setCurrentHP(int hp)
  {
    if(currentHP >= maxHP - currentHP)
    {
      currentHP = maxHP;
    }
    else
    {
      currentHP = hp;
    }
  }
  
  public String getName()
  {
  return name;
  }
  
  public String setName(name)
  {
    this.name = name;
  }
  
  public String getRole()
  {
    return role;
  }
  
  public void setRole(String role)
  {
    this.role = role;
  }
  
  public int get MaxHP()
  {
    return maxHP;
  }
  
  public int getLevel()
  {
    return level;
  }
  
  public String status()
  {
    return name + " has " currentHP + "/" + maxHP + " HP."
  }
  
  public String toString()
  {
    return name + " the " + role + " is level " + level + " with " + currentHP + "/" + maxHP + " HP and an attack of " + maxAttk + "-" + minAttk + ".";
  }
}
